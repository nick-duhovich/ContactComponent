<aura:component implements="force:appHostable,flexipage:availableForAllPageTypes,flexipage:availableForRecordHome,force:hasRecordId,forceCommunity:availableForAllPageTypes,force:lightningQuickAction" controller="ContactComponentController" access="global" >
    <aura:attribute name="mydata" type="Object"/>
    <aura:attribute name="mycolumns" type="List"/>
    <aura:handler name="init" value="{!this}" action="{!c.init}"/>
    
    <article class="slds-card">
        <div class="slds-card__header slds-grid">
            <header class="slds-media slds-media_center slds-has-flexi-truncate">
                <div class="slds-media__figure">
                    <span class="slds-icon_container slds-icon-standard-account" title="account">
                        <lightning:icon iconName="standard:contact" size="large"/>
                        <span class="slds-assistive-text">contact</span>
                    </span>
                </div>
                <div class="slds-media__body">
                    <h2 class="slds-card__header-title">
                        <a href="javascript:void(0);" class="slds-card__header-link slds-truncate" title="Contacts">
                            <span>Contacts</span>
                        </a>
                    </h2>
                </div>
            </header>
        </div>
        <div class="slds-grid slds-wrap" data-select="single">
            <div class="slds-size_1-of-5 slds-m-left_medium">
                <div class="slds-col">
                    <lightning:input aura:id="filter" type="text" onchange="{!c.search}" label="Search" placeholder="Search contact..."/>
                </div>
            </div>
            <div class="slds-size_1-of-5 slds-m-horizontal_medium slds-m-top_large">
                <div class="slds-col">
                    <lightning:icon iconName="utility:search" size="small" alternativeText="Search"/>
                </div>
            </div>
        </div>
        <footer class="slds-card__footer">
            <lightning:datatable data="{!v.mydata}"
                                 columns="{!v.mycolumns}"
                                 keyField="Id"
                                 hideCheckboxColumn="true"/>
        </footer>
    </article>
</aura:component>